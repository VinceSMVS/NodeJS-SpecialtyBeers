<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head'); %>
</head>
<body>
    <header>
        <%- include('partials/header'); %>
    </header>
    <main>    
        <h1>Profiel</h1>
        <div class="profile">
            <div>
                <img src="<%= profileImage %>" alt="profiel">
                <div>
                    <p> <%= username %></p>
                    <p> <%= email %></p>
                </div>
                
            </div>
            <div class="followers">
                <p>Volgers: <%= followers %></p>
                <p> Volgend: <%= following %></p>
            </div>
        </div>
        <div class="stats">
            <div>
                <div>
                    <p>Gemiddeld aantal bpd<p3>
                    <p>(bier per dag)</p>
                </div>
                <span><%= beersPerDay %></span>
            </div>
            <hr class="striped">
            <div> 
                <div>
                    <p>Aantal gedronken biertjes</p>
                </div>
                <span><%= beersDrank %></span>        
            </div>
        </div>

        <hr>
        <div class="carousel">
            <div class="carouselText">
                <i class="fas fa-bookmark"></i>
                <h3>Opgeslagen biertjes</h3>
            </div>
            <div class="featured-beersProfile">
                <% if (favoriteBeers && favoriteBeers.length > 0) { %>
                    <% favoriteBeers.forEach(function(beer) { %>
                        <img src="<%= beer.image %>" alt="<%= beer.name %>">
                    <% }); %>
                <% } else { %>
                    <p>Geen opgeslagen biertjes gevonden.</p>
                <% } %>
            </div>
        </div>
    </main>
    <footer>
    <%- include('partials/footer'); %>
    </footer>
</body>
</html>